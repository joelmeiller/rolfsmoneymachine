{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": false,
    "outDir": "build",
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  }
}
